[Unit]
Description=uStreamer - Lightweight, optimized video encoder
After=syslog.target network.target

[Service]
Type=simple
User={{ ustreamer_user }}
WorkingDirectory={{ ustreamer_launcher_dir }}
ExecStart={{ ustreamer_launcher_dir }}/ustreamer-launcher \
  {{ ustreamer_launcher_settings | join(' ') }}
Restart=always

[Install]
WantedBy=multi-user.target
